generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// ENUMS
// ============================================================================

enum UserRole {
  ADMIN
  AGENT
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  VISIT_SCHEDULED
  VISIT_COMPLETED
  PROPOSAL_SENT
  NEGOTIATION
  WON
  LOST
}

enum LeadSource {
  CHATBOT
  WEBSITE_FORM
  PHONE
  EMAIL
  WALK_IN
  REFERRAL
  SOCIAL_MEDIA
  OTHER
}

enum LeadUrgency {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum PropertyCategory {
  RENT
  SALE
}

// ============================================================================
// MODELS
// ============================================================================

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  fullName      String    @map("full_name")
  role          UserRole  @default(AGENT)
  phone         String?
  avatarUrl     String?   @map("avatar_url")
  isActive      Boolean   @default(true) @map("is_active")
  lastLogin     DateTime? @map("last_login")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  assignedLeads Lead[]         @relation("AssignedAgent")
  createdLeads  Lead[]         @relation("CreatedBy")
  activities    LeadActivity[]
  notifications Notification[]

  @@map("users")
}

model Lead {
  id              String           @id @default(uuid())
  firstName       String           @map("first_name")
  lastName        String?          @map("last_name")
  email           String?
  phone           String?
  city            String?
  status          LeadStatus       @default(NEW)
  source          LeadSource       @default(OTHER)
  urgency         LeadUrgency      @default(MEDIUM)
  score           Int              @default(50)
  transactionType PropertyCategory? @map("transaction_type")
  budgetMin       BigInt?          @map("budget_min")
  budgetMax       BigInt?          @map("budget_max")
  notes           Json             @default("[]")
  chatMessages    Json             @default("[]") @map("chat_messages")
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")

  // Relations
  assignedToId    String?          @map("assigned_to")
  assignedTo      User?            @relation("AssignedAgent", fields: [assignedToId], references: [id])
  createdById     String?          @map("created_by")
  createdBy       User?            @relation("CreatedBy", fields: [createdById], references: [id])
  activities      LeadActivity[]
  notifications   Notification[]

  @@index([status])
  @@index([assignedToId])
  @@index([createdAt(sort: Desc)])
  @@map("leads")
}

model LeadActivity {
  id          String   @id @default(uuid())
  type        String
  title       String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  leadId      String   @map("lead_id")
  lead        Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  createdById String?  @map("created_by")
  createdBy   User?    @relation(fields: [createdById], references: [id])

  @@index([leadId])
  @@map("lead_activities")
}

model Notification {
  id        String   @id @default(uuid())
  type      String
  title     String
  message   String?
  isRead    Boolean  @default(false) @map("is_read")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  leadId    String?  @map("lead_id")
  lead      Lead?    @relation(fields: [leadId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([isRead])
  @@map("notifications")
}

model Property {
  id            String           @id @default(uuid())
  externalId    String?          @unique @map("external_id")
  name          String
  type          String           @default("Appartement")
  category      PropertyCategory
  price         String           @default("Prix sur demande")
  priceNumeric  BigInt           @default(0) @map("price_numeric")
  location      String           @default("Casablanca")
  city          String           @default("Casablanca")
  beds          Int              @default(0)
  baths         Int              @default(0)
  area          String           @default("")
  areaNumeric   Int              @default(0) @map("area_numeric")
  image         String?
  images        Json             @default("[]")
  features      Json             @default("[]")
  smartTags     Json             @default("[]") @map("smart_tags")
  description   String?          @db.Text
  url           String?
  source        String           @default("mubawab")
  datePublished DateTime?        @map("date_published")
  dateScraped   DateTime?        @map("date_scraped")
  isActive      Boolean          @default(true) @map("is_active")
  isFeatured    Boolean          @default(false) @map("is_featured")
  viewCount     Int              @default(0) @map("view_count")
  createdAt     DateTime         @default(now()) @map("created_at")
  updatedAt     DateTime         @updatedAt @map("updated_at")

  @@index([category])
  @@index([city])
  @@index([type])
  @@index([priceNumeric])
  @@index([isActive])
  @@index([isFeatured])
  @@map("properties")
}
